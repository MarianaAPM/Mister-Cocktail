<%= render "navbar" %>


<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1594386180803-9087dffd4e5a?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80);">
  <div class="container">
    <h1><strong>Bloody Mary</strong></h1>
  </div>
</div>


<div class="container mt-5">
  <h1>Doses</h1>
  <div class='cocktail-info'>
    <div class='row'>
      <div class='col-lg-6 mb-5'>
        <div class="card mt-3">
          <div class="card-header">
            <i class="fas fa-cocktail"></i><i>   1 Cocktail</i>
          </div>
          <div class="card-body">
            <% @cocktail.doses.each do |dose| %>
              <p class="card-text d-flex justify-content-between"><%= dose.description %>: <%= dose.ingredient.name %><%= link_to "delete", dose_path(dose), method: :delete %></p>
            <% end %>
          </div>
        </div>
      </div>
      <div class='col-lg-6'>
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.input :description %>
          <%= f.association :ingredient %>
          <!-- adds bootstrap button  -->
          <%= f.submit class: 'btn btn-dark' %>
        <% end %>
      </div>
    </div>
  </div>
</div>


